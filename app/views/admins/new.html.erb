<div class="body-container">   
  <div class="back-container">
      <%= link_to "â—„ Back", "/admins" %>
    </div>
  <h1 id="pending-h1">Upload Nendoroid</h1>

  <%= form_with scope: :nendoroid, url: upload_nendo_path do |f| %>
    
    <div class="field">
      <%= f.label :name,"Name: " %>
      <%= f.text_field :name %>
    </div>
    
    <div class="field">
      <%= f.label :nendoroid_number %>
      <%= f.number_field :nendoroid_number %>
    </div>

    <div class="field">
      <%= f.label :series %>
      <%= f.text_field :series %>
    </div>

    <div class="field">
      <%= f.label :simple_description %>
      <%= f.text_field :simple_description %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>

    <div class="field">
      <%= f.label :release_date %>
      <%= f.date_field :release_date %>
    </div>

    <div class="field">
      <%= f.label :pre_order_price %>
      <%= f.number_field :pre_order_price %>
    </div>

    <div class="field">
      <%= f.label :pre_order_date %>
      <%= f.date_field :pre_order_date %>
    </div>

    <div class="field">
      <%= f.label :eta %>
      <%= f.date_field :eta %>
    </div>

    <div class="field">
      <%= f.label :min_deposit %>
      <%= f.number_field :min_deposit %>
    </div>

    <div class="field">
      <%= f.label(:availability, "Availability") %>
      <%= f.check_box(:availability) %>
    </div>

    <div class="field">
      <%= f.label :main_photo %>
      <%= f.file_field :main_photo %>
    </div>

    <div class="field">
      <%= f.label :photos %>
      <%= f.file_field :photos, multiple: true %>
    </div>

    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>  