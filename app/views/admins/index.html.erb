
<div class="body-container">  
  <h1 id="admin-users-h1">Users</h1>
  <table id="customers">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Balance</th>
      <th>Action</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><strong><%= user.name %></strong></td>
      <td><strong><%= user.email %></td>
      <td><strong><%= user.balance %></td>
      <td><strong><a href="<%= admin_path(user) %>">View User</a></td>
    </tr>
    <% end %>
  </table>
</div>