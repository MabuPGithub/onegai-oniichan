<div class="body-container">
  <h1>Welcome to OnegaiOniichan Toy Store!</h1>
  <%= image_tag("logo.png", class: "main-logo") %>
  <%= link_to image_tag("shop_now.png", class: "shop-image"), in_stock_path %>


  <div class="twitter-feed-container">
    <h2 class="twitter-feed-container-title">Updates from GoodSmile US:</h2>
    <% @twitter_feed.each do |tweet| %>
      <div class="twitter-container">
        <div class="twitter-header">
          <%= image_tag("gsc_logo.jpg", class: "twitter-account-logo") %>
          <p>GoodSmile_US</p>
          <%= image_tag("verified.png", class: "twitter-verified-logo") %>
          <p><a href="https://twitter.com/GoodSmile_US">@GoodSmile_US</a></p>
        </div>
        <div class="twitter-body">
          <% string = tweet.text %>
          <% splitStr = string.split(" ") %>
          <% link = splitStr[-1] %>
          <% splitStr.delete(link) %>
          <p><%= splitStr.join(" ") %></p>
          <a href="<%= link %>"><%= link %></a>
        </div>
      </div>
    <% end %>
  </div>

</div>