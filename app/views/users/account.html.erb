<div class="body-container">
  <div class="back-container">
      <%= link_to "â—„ Back", "/" %>
  </div>

  <h1>My account</h1>

  <h3> Personal Information </h3>
  <hr class="solid">

  <div class="account-container">

    <label>Name:</label>
    <input type="text" value='<%= current_user.name %>' disabled>

    <label>Phone Number:</label>
    <input type="text" value='<%= current_user.phone_number %>' disabled>

    <label>Address:</label>
    <input type="text" value='<%= current_user.address %>' disabled>

    <label>Email:</label>
    <input type="text" value='<%= current_user.email %>' disabled>

    
  </div>

  <h3> Your Orders</h3>
  <hr class="solid">

  <table id="customers">
    <tr>
      <th>Order Number</th>
      <th>Item</th>
      <th>Price</th>
      <th>Status</th>
    </tr>
    <% @user_orders.each do |uo|%>
    <tr>
      <td><%= uo.id %></td>
      <td><%= uo.nendoroid_name %></td>
      <td><%= uo.total_price %></td>
      <td><%= uo.status %></td>
    </tr>
    <% end %>
  </table>
</div>